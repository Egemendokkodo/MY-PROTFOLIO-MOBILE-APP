<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ContactPage">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Instagram"
        android:textColor="#000080"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editTextGithub" />

    <EditText
        android:id="@+id/editTextInstagram"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Email"
        android:inputType="none"
        android:text="https://www.instagram.com/egemen.svg/"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/editTextGithub"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/copyGithub"
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:text="Copy"
        app:icon="@drawable/ic_baseline_content_copy_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextGithub"
        app:layout_constraintStart_toEndOf="@+id/editTextGithub"
        app:layout_constraintTop_toTopOf="@+id/editTextGithub" />

    <Button
        android:id="@+id/copyInstagram"
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:text="Copy"
        app:icon="@drawable/ic_baseline_content_copy_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextInstagram"
        app:layout_constraintStart_toEndOf="@+id/editTextInstagram"
        app:layout_constraintTop_toTopOf="@+id/editTextInstagram" />

    <EditText
        android:id="@+id/editTextGithub"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Email"
        android:inputType="none"
        android:text="https://github.com/Egemendokkodo"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textColor="#000080"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Email"
        android:inputType="none"
        android:minHeight="48dp"
        android:text="egemen2001sevgi@hotmail.com"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/copyEmail"
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:text="Copy"
        app:icon="@drawable/ic_baseline_content_copy_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextEmail"
        app:layout_constraintStart_toEndOf="@+id/editTextEmail"
        app:layout_constraintTop_toTopOf="@+id/editTextEmail" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000080"
        android:layout_marginTop="40dp"
        android:text="Github"
        android:textSize="25dp"

        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>